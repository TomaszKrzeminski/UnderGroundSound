@model Band
@{
    ViewData["Title"] = "EditBandMembers";
}



<div class="container">

    @if (Model.AppUsers.Count > 0)
    {
        <table class="table-responsive">
            <thead>
                <tr>
                    <th colspan="3" class="text-center text-lg-center">Członkowie Zespołu</th>
                    <th></th>
                    <th></th>
                </tr>
               <tr>

               </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.AppUsers)
                {
                    <tr>
                        <td><h4 class="text-xl-center">@item.UserName</h4></td>

                        @if (Model.CreatorId != item.Id)
                        {
                            <td>

                                <form asp-controller="UsersOptions" asp-action="RemoveUserFromBand" method="post">
                                    <input type="hidden" name="BandId" value="@Model.BandId" />
                                    <input type="hidden" name="UserId" value="@item.Id" />
                                    <button class="btn btn-danger" type="submit">Usuń</button>
                                </form>
                            
                            </td>
                        }


                    </tr>
                }


            </tbody>
        </table>
    }
    <br />
    <br />
    <div class="row">
        <a class="btn btn-warning btn-lg" asp-controller="UsersOptions" asp-action="AddUserToBand" asp-route-id="@Model.BandId">Dodaj Członka</a>
    </div>





</div>